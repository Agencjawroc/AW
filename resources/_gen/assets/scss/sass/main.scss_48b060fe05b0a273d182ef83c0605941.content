:root{--blue: #002d72;--second-txt-color: rgb(84, 89, 95);--white: #ffffff;--main-dark-color: #000000;--red: #df3e40;--bg-light-blue: #f0f6ff}*{-webkit-box-sizing:border-box;box-sizing:border-box}html{font-size:100%;scroll-behavior:smooth}@media(min-width:1920px){html{font-size:120%}}@media(min-width:2560px){html{font-size:140%}}@media(min-width:3840px){html{font-size:160%}}body{font-family:source sans pro,Sans-serif;color:var(--main-dark-color);line-height:1.25;font-size:1rem;margin:0;background-color:#f9f9f9;margin-top:8rem;overflow-x:hidden}b,strong{font-weight:700}a{text-decoration:none;color:var(--orange)}